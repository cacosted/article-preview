.card
  background-color: #fff
  border-radius: 15px
  overflow: hidden
  max-width: 500px

  &__content
    padding: 3em

  &__img
    width: 100%

  &__footer
    display: flex
    justify-content: space-between
  
  &__author
    display: flex
    align-items: center
    gap: 1em

  &__avatar
    aspect-ratio: 1
    width: 60px
    border-radius: 100px
  
