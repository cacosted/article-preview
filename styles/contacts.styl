.contacts
  background-color: main-dark
  color: accent-light
  position: absolute
  inset-inline-start: 0
  inset-block-end: 0
  padding: 2em
  width: 100%

  display: flex
  align-items: center
  justify-content: space-around
  gap: 1.5em
  
  &__media
    display: flex
    align-items: center
    gap: 1.5em

  &__title
    text-transform: uppercase;
    font-size: 1.4rem
    letter-spacing: .5rem
    color: main-color

  &__img
    aspect-ratio: 1
    width: 35px

  